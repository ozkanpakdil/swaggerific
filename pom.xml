    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.0</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <configuration>
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>icns</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                    <!--<argLine>
                        &#45;&#45;add-opens javafx.graphics/com.sun.javafx.application=ALL-UNNAMED
                    </argLine>-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>${javafx.plugin.version}</version>
                <configuration>
                    <mainClass>${mainClass}</mainClass>
                    <options>
                        <option>--enable-native-access=javafx.graphics</option>
                        <option>--add-opens=jdk.unsupported/sun.misc=ALL-UNNAMED</option>
                        <option>--add-opens=java.base/java.nio=ALL-UNNAMED</option>
                    </options>
                </configuration>
            </plugin>

            <!--

            shade plugin is required for ikonli https://kordamp.org/ikonli/#_creating_a_fat_jar
            not working for now, which is affecting settings form.

            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <transformers>
                        <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <mainClass>io.github.ozkanpakdil.swaggerific.SwaggerApplication</mainClass>
                        </transformer>
                    </transformers>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
                <version>${gluonfx.plugin.version}</version>
                <configuration>
                    <!--suppress UnresolvedMavenProperty -->
                    <target>${gluonfx.target}</target>
                    <mainClass>${mainClass}</mainClass>
                    <attachList>
                        <list>display</list>
                        <list>lifecycle</list>
                        <list>statusbar</list>
                        <list>storage</list>
                    </attachList>
                    <resourcesList>
                        <list>application.properties</list>
                    </resourcesList>
                    <releaseConfiguration>
                        <skipSigning>true</skipSigning>
                        <vendor>${project.groupId}</vendor>
                        <description>${project.description}</description>
                        <version>${project.version}</version>
                    </releaseConfiguration>
                    <!--<runtimeArgs>
                        <arg>&#45;&#45;add-modules=javafx.controls,javafx.web</arg>
                        <arg>&#45;&#45;add-exports=javafx.controls/com.sun.javafx.scene.control=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.graphics/com.sun.javafx.scene.input=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.graphics/com.sun.javafx.util=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.base/com.sun.javafx.reflect=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.base/com.sun.javafx.beans=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</arg>
                        <arg>&#45;&#45;add-exports=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</arg>
                    </runtimeArgs>-->
					<nativeImageArgs>
						<arg>--enable-native-access=ALL-UNNAMED</arg>
					</nativeImageArgs>
					<reflectionList>
						<list>java.util.Properties</list>
					</reflectionList>
                </configuration>
            </plugin>
        </plugins>
    </build>
