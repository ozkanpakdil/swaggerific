<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane style="-fx-padding: 1em;" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.github.ozkanpakdil.swaggerific.ui.edit.Shortcuts"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <!-- Hidden menu bar used only to register keyboard accelerators for this view -->
    <MenuBar managed="false" visible="false">
        <menus>
            <Menu text="Hidden">
                <items>
                    <MenuItem text="Save" onAction="#save" accelerator="Shortcut+S"/>
                    <MenuItem text="Reset to Defaults" onAction="#resetDefaults" accelerator="Shortcut+R"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>

    <Label text="Customize keyboard shortcuts" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" />

    <Label text="Send Request" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtSendRequest" promptText="Press keys (e.g., Ctrl+Enter)" editable="false"
               onMouseClicked="#beginCaptureSend" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="Clear" onAction="#clearSend" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="Toggle Debug Console" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtToggleDebug" promptText="Press keys (e.g., Ctrl+D)" editable="false"
               onMouseClicked="#beginCaptureDebug" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="Clear" onAction="#clearDebug" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <Label text="JSON: Toggle fold at caret" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtJsonToggleFold" promptText="Press keys (e.g., Ctrl+-)" editable="false"
               onMouseClicked="#beginCaptureJsonToggle" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Clear" onAction="#clearJsonToggle" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    <Label text="JSON: Fold all top-level" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txtJsonFoldTop" promptText="Press keys (e.g., Ctrl+9)" editable="false"
               onMouseClicked="#beginCaptureJsonFoldTop" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="Clear" onAction="#clearJsonFoldTop" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Label text="JSON: Unfold all" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="txtJsonUnfoldAll" promptText="Press keys (e.g., Ctrl+0)" editable="false"
               onMouseClicked="#beginCaptureJsonUnfoldAll" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button text="Clear" onAction="#clearJsonUnfoldAll" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="3">
        <Button text="Save" onAction="#save" />
        <Button text="Reset to Defaults" onAction="#resetDefaults" />
    </HBox>
</GridPane>
