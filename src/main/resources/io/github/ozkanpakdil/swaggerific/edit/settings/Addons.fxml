<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane style="-fx-padding: 1em;" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.github.ozkanpakdil.swaggerific.ui.edit.Addons"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="140.0" prefWidth="220.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>

    <Label text="Enable experimental addons" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <CheckBox fx:id="chkEnableAddons" text="Enable" onAction="#onEnableChanged" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
           text="Experimental addons may provide integrations and features under development. Currently toggles stored preference only."/>
</GridPane>
