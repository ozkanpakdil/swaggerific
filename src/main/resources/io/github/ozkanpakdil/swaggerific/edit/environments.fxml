<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.ozkanpakdil.swaggerific.ui.edit.EnvironmentController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Current Environment:" />
                  <ComboBox fx:id="environmentSelector" prefWidth="200.0" promptText="Select Environment" />
                  <Button fx:id="btnNewEnvironment" mnemonicParsing="false" onAction="#handleNewEnvironment" text="New">
                     <tooltip>
                        <Tooltip text="Create a new environment" />
                     </tooltip>
                  </Button>
                  <Button fx:id="btnEditEnvironment" mnemonicParsing="false" onAction="#handleEditEnvironment" text="Edit">
                     <tooltip>
                        <Tooltip text="Edit the selected environment" />
                     </tooltip>
                  </Button>
                  <Button fx:id="btnDeleteEnvironment" mnemonicParsing="false" onAction="#handleDeleteEnvironment" text="Delete">
                     <tooltip>
                        <Tooltip text="Delete the selected environment" />
                     </tooltip>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <TitledPane animated="false" expanded="false" text="Environment Details">
               <content>
                  <AnchorPane>
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label prefWidth="100.0" text="Name:" />
                                    <TextField fx:id="txtEnvironmentName" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label prefWidth="100.0" text="Description:" />
                                    <TextField fx:id="txtEnvironmentDescription" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                 <children>
                                    <Button fx:id="btnSaveEnvironment" mnemonicParsing="false" onAction="#handleSaveEnvironment" text="Save" />
                                    <Button fx:id="btnCancelEnvironment" mnemonicParsing="false" onAction="#handleCancelEnvironment" text="Cancel" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.7" orientation="VERTICAL" BorderPane.alignment="CENTER">
         <items>
            <BorderPane>
               <top>
                  <ToolBar BorderPane.alignment="CENTER">
                     <items>
                        <Label text="Environment Variables" />
                        <Button fx:id="btnAddVariable" mnemonicParsing="false" onAction="#handleAddVariable" text="Add">
                           <tooltip>
                              <Tooltip text="Add a new variable" />
                           </tooltip>
                        </Button>
                        <Button fx:id="btnEditVariable" mnemonicParsing="false" onAction="#handleEditVariable" text="Edit">
                           <tooltip>
                              <Tooltip text="Edit the selected variable" />
                           </tooltip>
                        </Button>
                        <Button fx:id="btnDeleteVariable" mnemonicParsing="false" onAction="#handleDeleteVariable" text="Delete">
                           <tooltip>
                              <Tooltip text="Delete the selected variable" />
                           </tooltip>
                        </Button>
                     </items>
                  </ToolBar>
               </top>
               <center>
                  <TableView fx:id="tableVariables" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="colVariableKey" prefWidth="200.0" text="Key" />
                      <TableColumn fx:id="colVariableValue" prefWidth="300.0" text="Value" />
                      <TableColumn fx:id="colVariableSecret" prefWidth="75.0" text="Secret" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
            <BorderPane>
               <top>
                  <Label text="Variable Details" BorderPane.alignment="CENTER_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Label>
               </top>
               <center>
                  <VBox spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label prefWidth="100.0" text="Key:" />
                              <TextField fx:id="txtVariableKey" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label prefWidth="100.0" text="Value:" />
                              <TextField fx:id="txtVariableValue" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label prefWidth="100.0" text="Secret:" />
                              <javafx.scene.control.CheckBox fx:id="chkVariableSecret" mnemonicParsing="false">
                                 <tooltip>
                                    <Tooltip text="Mark as secret to mask the value in the UI" />
                                 </tooltip>
                              </javafx.scene.control.CheckBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button fx:id="btnSaveVariable" mnemonicParsing="false" onAction="#handleSaveVariable" text="Save" />
                              <Button fx:id="btnCancelVariable" mnemonicParsing="false" onAction="#handleCancelVariable" text="Cancel" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </center>
            </BorderPane>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" text="Close" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>